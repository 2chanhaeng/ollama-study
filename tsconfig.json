{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    // "plugins": [],
    "paths": { "@/*": ["./*"] }
  },
  "ts-node": { "esm": true },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
