generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Session {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  logs      Log[]
}

model Log {
  id        String   @id @default(cuid())
  role      String
  createdAt DateTime @default(now())
  session   Session  @relation(fields: [sessionId], references: [id])
  sessionId String

  @@index([sessionId])
}

